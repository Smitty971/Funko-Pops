
<h3>Post a Comment</h3>
<%= form_for [ @funko_pops, @comment ] do |f| %>
<ul>
  <% @comment.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :username, "Your name" %><br/>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :body, "Leave a Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
