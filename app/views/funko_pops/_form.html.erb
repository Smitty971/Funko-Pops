<%= form_for @funkopop do |f| %>
  <ul>
  <% @funkopop.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :series %><br />
    <%= f.text_field :series %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
   <p>
    <%= f.label :tag_list %><br />
     <%= f.text_field :tag_list %>
   </p> 
  <p>
    <% if @funkopop.image.exists? %>
       <%= image_tag @funkopop.image.url %><br/>
     <% end %>
     <%= f.label :image, "Attach a New Image" %><br/>
     <%= f.file_field :image %>
   </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>